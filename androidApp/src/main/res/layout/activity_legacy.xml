<?xml version="1.0" encoding="utf-8"?>
<!--
    Legacy XML Layout Activity
    This demonstrates how to integrate KMP into a legacy XML-based Android app
    Flow: XML Layout -> ComposeView -> Jetpack Compose -> KMP ViewModel -> KMP Service
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Optional: Add a traditional XML TextView header -->
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Legacy XML Activity"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="#6200EE"
        android:textColor="@android:color/white"
        android:gravity="center" />

    <!-- ComposeView: Bridge between XML and Jetpack Compose -->
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/composeView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>

